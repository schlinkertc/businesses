{# application/templates/submit.jinja2 #}

{% extends "layout.jinja2" %}
{% block content %}
<div class="card">
    <h1 class="site-title">Submit a Business</h1>
        <form 
            action="" 
            method="post">
            {{ form.csrf_token() }}
 
            {% for field in form if field.name != "csrf_token" %}
                <p>{{ field.label() }}</p>
                <p>{{ field }}</p>
            {% endfor %}

        </form>
         <div class="card">
              {% if business == '' %}
                <p></p>
              {% elif business != '' %}
                <p>Is this the business you're looking for?
                {% for k in ['name','city','state','country','categories'] %}
                  <p>{{k}}: {{business[k]}}</p>
                {% endfor %}
                <form 
                    action="" 
                    method="post">
                    {{ confirm.csrf_token() }}
                    {% for field in confirm if field.name != "csrf_token" %}
                        <p>{{ field }}</p>
                    {% endfor %}
                </form>
              {% else %}
                <p>OH GOD WHAT IS THE STATUS?!</p>
              {% endif %}
        </div>
        
</div>
{% endblock %}